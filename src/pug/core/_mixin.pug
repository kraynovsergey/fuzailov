mixin categories_item(title, img, star)
    article.categories__item(role="article" data-categories-item)
        .categories__item-content
            h3.categories__item-title(data-categories-item-target)
                a(href="#")=title
            a.categories__item-link.link._italic(href="#") Перейти
        picture.categories__item-picture(data-categories-item-picture)
            source(type="image/webp" srcset="@img/tmp/"+img+"@2x.webp 2x, @img/tmp/"+img+".webp 1x")
            img(srcset="@img/tmp/"+img+"@2x.jpg 2x, @img/tmp/"+img+".jpg 1x" alt="" width="278" height="258" loading="lazy")
        if star 
            svg.categories__item-star(width="30" height="30")
                use(xlink:href="@img/icons/icons.svg#intro-star")

mixin home_services_item(title, img, img_mobile)
    article.home-services__item(data-categories-item)
        picture.home-services__item-picture(data-categories-item-picture)
            source(type="image/webp" srcset="@img/tmp/"+img+"@2x.webp 2x, @img/tmp/"+img+".webp 1x" media="(min-width: 768px)")
            source(type="image/jpeg" srcset="@img/tmp/"+img+"@2x.jpg 2x, @img/tmp/"+img+".jpg 1x" media="(min-width: 768px)")
            source(type="image/webp" srcset="@img/tmp/"+img_mobile+"@2x.webp 2x, @img/tmp/"+img_mobile+".webp 1x" media="(max-width: 767px)")
            source(type="image/jpeg" srcset="@img/tmp/"+img_mobile+"@2x.jpg 2x, @img/tmp/"+img_mobile+".jpg 1x" media="(max-width: 767px)")
            img(srcset="@img/tmp/"+img+"@2x.jpg 2x, @img/tmp/"+img+".jpg 1x" alt="" width="391" height="430" loading="lazy")
        h3.home-services__item-title(data-categories-item-target)
            a(href="#")=title
        a.home-services__item-link.link._italic(href="#") Перейти
        svg.home-services__item-star(width="30" height="30")
            use(xlink:href="@img/icons/icons.svg#intro-star")